<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
  <!-- <% %> -> iske andr jo bhi likhenge wo java script hosakta hai -->
  <%- include("./partials/nav.ejs") %><!--this is including other ejs file code here-->

  <div class="blogs content">
    <h2>All Blogs</h2>

    <% if (blogs.length > 0) { %>
      <% blogs.forEach(blog => { %>
        <a href="/blogs/<%=blog._id%>" class="single">
        <!-- equal to sign after open angle bracket and percentage shows output at the frontend -->
        <h3 class="title"><%= blog.title %></h3> 
        <p class="snippet"><%= blog.snippet %></p>
      </a>
      <% }) %>
    <% } else { %>
      <p>There are no blogs to display...</p>
    <% } %>
    
  </div>

  <%- include("./partials/footer.ejs") %>
</body>
</html>